<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Stack.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Stack"
    Shell.FlyoutBehavior="Disabled"
    Title="Stack">

    <ShellContent Title="Home" Route="home" ContentTemplate="{DataTemplate local:Pages.HomePage}" />
    <ShellContent Title="Crear Sala" Route="crearSala" ContentTemplate="{DataTemplate local:Pages.CrearSalaPage}" />
    <ShellContent Title="Unirse Sala" Route="unirseSala" ContentTemplate="{DataTemplate local:Pages.UnirseSalaPage}" />
    <ShellContent Title="Sala de Espera" Route="wait" ContentTemplate="{DataTemplate local:Pages.WaitPage}" />
    <ShellContent
        Title="Partida"
        ContentTemplate="{DataTemplate local:Pages.MainPage}"
        Route="partida" />


</Shell>
